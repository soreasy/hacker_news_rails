<% if @user.errors %>
  <% @user.errors.full_messages.each do |error| %>
    <p>
      <%= error %>
    </p>
  <% end %>
<% end %>

<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>

  <p>
    <%= f.submit "Register" %>
  </p>
<% end %>
